{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://amelia.dev/schemas/design-system/colors.json",
  "title": "Amelia Design System - Color Tokens",
  "description": "Color token definitions for dark mode and light mode (daytime theme)",
  "version": "1.0.0",
  "dark": {
    "description": "Dark mode (primary) - Deep forest greens with gold accents",
    "background": "#0D1A12",
    "foreground": "#EFF8E2",
    "card": "#1F332E",
    "card-foreground": "#EFF8E2",
    "popover": "#1F332E",
    "popover-foreground": "#EFF8E2",
    "primary": "#FFC857",
    "primary-foreground": "#0D1A12",
    "secondary": "#4A5C54",
    "secondary-foreground": "#EFF8E2",
    "muted": "#2B3D35",
    "muted-foreground": "#88A896",
    "accent": "#5B9BD5",
    "accent-foreground": "#EFF8E2",
    "destructive": "#A33D2E",
    "destructive-foreground": "#EFF8E2",
    "border": "rgba(47, 61, 53, 0.2)",
    "input": "rgba(47, 61, 53, 0.3)",
    "ring": "rgba(255, 200, 87, 0.5)",
    "sidebar": "#161F1C",
    "sidebar-foreground": "#EFF8E2",
    "sidebar-primary": "#FFC857",
    "sidebar-primary-foreground": "#0D1A12",
    "sidebar-accent": "#2B3D35",
    "sidebar-accent-foreground": "#EFF8E2",
    "sidebar-border": "rgba(47, 61, 53, 0.15)",
    "sidebar-ring": "#3b82f6"
  },
  "light": {
    "description": "Light mode (secondary) - Daytime theme with warm cream backgrounds and professional blue accents",
    "background": "#FDF8F0",
    "foreground": "#1A2F23",
    "card": "#FFFDF9",
    "card-foreground": "#1A2F23",
    "popover": "#FFFDF9",
    "popover-foreground": "#1A2F23",
    "primary": "#2E6B9C",
    "primary-foreground": "#FFFDF9",
    "secondary": "#F5F1E8",
    "secondary-foreground": "#1A2F23",
    "muted": "#EBE5D8",
    "muted-foreground": "#5C7263",
    "accent": "#E8B84A",
    "accent-foreground": "#1A2F23",
    "destructive": "#8B3224",
    "destructive-foreground": "#FFFDF9",
    "border": "rgba(26, 47, 35, 0.15)",
    "input": "rgba(26, 47, 35, 0.2)",
    "ring": "rgba(46, 107, 156, 0.5)",
    "sidebar": "#F5F1E8",
    "sidebar-foreground": "#1A2F23",
    "sidebar-primary": "#2E6B9C",
    "sidebar-primary-foreground": "#FFFDF9",
    "sidebar-accent": "#EBE5D8",
    "sidebar-accent-foreground": "#1A2F23",
    "sidebar-border": "rgba(26, 47, 35, 0.1)",
    "sidebar-ring": "#3b82f6"
  },
  "status": {
    "description": "Workflow state colors for both themes",
    "running": {
      "dark": "#FFC857",
      "light": "#2E6B9C",
      "description": "In progress state"
    },
    "completed": {
      "dark": "#5B8A72",
      "light": "#3D7552",
      "description": "Successfully completed state"
    },
    "pending": {
      "dark": "#4A5C54",
      "light": "#B8AE9C",
      "description": "Queued/waiting state"
    },
    "blocked": {
      "dark": "#A33D2E",
      "light": "#8B3224",
      "description": "Blocked/awaiting state"
    },
    "failed": {
      "dark": "#A33D2E",
      "light": "#8B3224",
      "description": "Error/failed state"
    },
    "cancelled": {
      "dark": "#5B6B7A",
      "light": "#6B7D8C",
      "description": "Cancelled state"
    }
  },
  "chart": {
    "description": "Data visualization color palette for both themes",
    "dark": {
      "chart-1": "#FFC857",
      "chart-2": "#5B8A72",
      "chart-3": "#5B9BD5",
      "chart-4": "#A33D2E",
      "chart-5": "#88A896"
    },
    "light": {
      "chart-1": "#2E6B9C",
      "chart-2": "#3D7552",
      "chart-3": "#E8B84A",
      "chart-4": "#8B3224",
      "chart-5": "#5C7263"
    }
  },
  "oklch": {
    "description": "OKLCH color space values for programmatic color manipulation",
    "dark": {
      "background": "oklch(8% 0.02 150)",
      "foreground": "oklch(95% 0.02 120)",
      "card": "oklch(18% 0.025 150)",
      "card-foreground": "oklch(95% 0.02 120)",
      "popover": "oklch(18% 0.025 150)",
      "popover-foreground": "oklch(95% 0.02 120)",
      "primary": "oklch(82% 0.16 85)",
      "primary-foreground": "oklch(8% 0.02 150)",
      "secondary": "oklch(35% 0.04 150)",
      "secondary-foreground": "oklch(95% 0.02 120)",
      "muted": "oklch(25% 0.03 150)",
      "muted-foreground": "oklch(60% 0.05 150)",
      "accent": "oklch(65% 0.12 240)",
      "accent-foreground": "oklch(95% 0.02 120)",
      "destructive": "oklch(50% 0.2 25)",
      "destructive-foreground": "oklch(95% 0.02 120)",
      "border": "oklch(30% 0.02 150 / 0.2)",
      "input": "oklch(30% 0.02 150 / 0.3)",
      "ring": "oklch(82% 0.16 85 / 0.5)"
    },
    "light": {
      "background": "oklch(96% 0.02 85)",
      "foreground": "oklch(20% 0.04 150)",
      "card": "oklch(99% 0.01 85)",
      "card-foreground": "oklch(20% 0.04 150)",
      "popover": "oklch(99% 0.01 85)",
      "popover-foreground": "oklch(20% 0.04 150)",
      "primary": "oklch(45% 0.12 240)",
      "primary-foreground": "oklch(99% 0.01 85)",
      "secondary": "oklch(94% 0.015 85)",
      "secondary-foreground": "oklch(20% 0.04 150)",
      "muted": "oklch(90% 0.02 85)",
      "muted-foreground": "oklch(45% 0.03 150)",
      "accent": "oklch(75% 0.14 85)",
      "accent-foreground": "oklch(20% 0.04 150)",
      "destructive": "oklch(45% 0.18 25)",
      "destructive-foreground": "oklch(99% 0.01 85)",
      "border": "oklch(25% 0.03 150 / 0.15)",
      "input": "oklch(25% 0.03 150 / 0.2)",
      "ring": "oklch(45% 0.12 240 / 0.5)"
    },
    "status": {
      "running": {
        "dark": "oklch(82% 0.16 85)",
        "light": "oklch(45% 0.12 240)"
      },
      "completed": {
        "dark": "oklch(50% 0.1 150)",
        "light": "oklch(40% 0.1 150)"
      },
      "pending": {
        "dark": "oklch(35% 0.04 150)",
        "light": "oklch(60% 0.02 85)"
      },
      "blocked": {
        "dark": "oklch(50% 0.2 25)",
        "light": "oklch(45% 0.18 25)"
      },
      "failed": {
        "dark": "oklch(50% 0.2 25)",
        "light": "oklch(45% 0.18 25)"
      },
      "cancelled": {
        "dark": "oklch(45% 0.03 250)",
        "light": "oklch(50% 0.04 250)"
      }
    },
    "chart": {
      "dark": {
        "chart-1": "oklch(82% 0.16 85)",
        "chart-2": "oklch(50% 0.1 150)",
        "chart-3": "oklch(65% 0.12 240)",
        "chart-4": "oklch(50% 0.2 25)",
        "chart-5": "oklch(60% 0.05 150)"
      },
      "light": {
        "chart-1": "oklch(45% 0.12 240)",
        "chart-2": "oklch(40% 0.1 150)",
        "chart-3": "oklch(75% 0.14 85)",
        "chart-4": "oklch(45% 0.18 25)",
        "chart-5": "oklch(45% 0.03 150)"
      }
    }
  }
}

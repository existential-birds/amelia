{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Amelia Configuration",
  "type": "object",
  "properties": {
    "active_profile": {
      "type": "string",
      "default": "work"
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Profile"
      }
    }
  },
  "definitions": {
    "Profile": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "enum": ["cli", "cli:claude", "api", "api:openai"]
        },
        "tracker": {
          "type": "string",
          "enum": ["jira", "github", "none"]
        },
        "strategy": {
          "type": "string",
          "enum": ["single", "competitive"]
        }
      },
      "required": ["driver", "tracker", "strategy"]
    }
  }
}
